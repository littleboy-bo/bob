<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.bob.learn.service.mapper.BobLearnMapper">
    <resultMap id="BaseResultMap" type="cn.com.bob.learn.service.model.BobLearn">
        <result column="USER_ID" jdbcType="VARCHAR" property="userId" />
        <result column="USER_NAME" jdbcType="VARCHAR" property="userName" />
        <result column="AGE" jdbcType="NUMERIC" property="age" />
        <result column="PHONE" jdbcType="VARCHAR" property="phone" />
        <result column="ADDRESS" jdbcType="VARCHAR" property="address" />
        <result column="TRAN_DATE" jdbcType="DATE" property="tranDate" />
    </resultMap>
    <sql id="Base_Column_List">
        USER_ID,USER_NAME,AGE,PHONE,ADDRESS,TRAN_DATE
    </sql>
    <!--根据userId获取用户信息 -->
    <select id="getUserByUserId" resultType="cn.com.bob.learn.service.model.BobLearn"
            parameterType="java.util.Map">
        select
        <include refid="Base_Column_List" />
        from BOB_LEARN
        where USER_ID = #{userId, jdbcType=VARCHAR}
    </select>

</mapper>